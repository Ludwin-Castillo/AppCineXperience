<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detalles"
    tools:ignore="ExtraText">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="148dp"
        android:gravity="center"
        android:text="PELICULA."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="300dp"
        android:layout_height="350dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:foregroundGravity="center"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="21dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:padding="16dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/interestelar" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/titulo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardview"
        android:layout_centerHorizontal="true"
        android:text="CATEGORIA"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:cardCornerRadius="12dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="469dp" />

    <TextView
        android:id="@+id/titulo2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/cardview"
        android:layout_centerHorizontal="true"
        android:text="Hora"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:cardCornerRadius="12dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="531dp" />

    <Button
        android:id="@+id/botom"
        android:layout_width="139dp"
        android:layout_height="49dp"
        android:layout_below="@id/cardview"
        android:layout_centerHorizontal="true"
        android:text="Selecciona tu asiento"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:cardCornerRadius="2dp"
        android:backgroundTint="@color/azul"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="532dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/botom2"
        android:layout_width="139dp"
        android:layout_height="49dp"
        android:layout_below="@id/cardview"
        android:layout_centerHorizontal="true"
        android:text="Selecciona tu asiento"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:backgroundTint="@color/azul"
        android:textSize="10sp"
        app:cardCornerRadius="2dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="764dp" />

    <TextView
        android:id="@+id/titulo3"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_below="@id/cardview"
        android:layout_centerHorizontal="true"
        android:text="Synopsis"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cardCornerRadius="12dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="598dp" />

    <TextView
        android:id="@+id/titulo4"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_below="@id/cardview"
        android:layout_centerHorizontal="true"
        android:text="Precio"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cardCornerRadius="12dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="768dp" />

    <TextView
        android:id="@+id/titulo5"
        android:layout_width="361dp"
        android:layout_height="108dp"
        android:layout_below="@id/cardview"
        android:layout_centerHorizontal="true"
        android:text="Synopsis"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cardCornerRadius="12dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="639dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
