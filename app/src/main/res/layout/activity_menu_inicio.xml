                    android:layout_height="260dp"
                    android:layout_margin="16dp"
                    android:background="@color/black"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/imagen"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:background="@drawable/granturismo" />

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="160dp"
                        android:fontFamily="@font/adamina"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:text="Gran Turismo" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="85dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="110dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="230dp"
                        android:text="Automovilismo" />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="260dp"
                    android:layout_margin="16dp"
                    android:background="@color/black"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/imagen2"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:background="@drawable/oppenheimer" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="160dp"
                        android:fontFamily="@font/adamina"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:text="OPPENHEIMER" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="85dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="230dp"
                        android:text="Accion" />

                </androidx.cardview.widget.CardView>

                <!-- Tercer CardView -->
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="260dp"
                    android:layout_margin="16dp"
                    android:background="@color/black"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/imagen3"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:background="@drawable/supermario" />

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="160dp"
                        android:fontFamily="@font/adamina"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:text="SUPER MARIO BROS" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="85dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="230dp"
                        android:text="Infantil" />

                </androidx.cardview.widget.CardView>

                <!-- Cuarto CardView -->
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="260dp"
                    android:layout_margin="16dp"
                    android:background="@color/black"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/imagen4"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:background="@drawable/rapidosyfurioso" />

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="160dp"
                        android:fontFamily="@font/adamina"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:text="RAPIDOS Y FURIOSOS X" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="85dp"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/estrella" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="230dp"
                        android:text="Accion" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/promocion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scroll"
            android:text="PROXIMAMENTE"
            android:padding="30dp"
            android:fontFamily="@font/adamina"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/proxima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/promocion"
            android:layout_margin="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:scaleType="centerCrop"
                android:src="@drawable/interestelar"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Detalles"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_marginTop="440dp"
                android:layout_marginStart="80dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/recomendacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/proxima"
            android:text="RECOMENDACIONES"
            android:padding="30dp"
            android:fontFamily="@font/adamina"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <RelativeLayout
            android:id="@+id/peli1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/recomendacion">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/justiciero"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="40dp"
                android:text="El Justiciero: Capitulo final"
                android:fontFamily="@font/adamina"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="110dp"
                android:text="2023"
                android:textColor="@color/black"
                android:fontFamily="@font/adamina"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="145dp"
                android:text="110 min"
                android:fontFamily="@font/adamina"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="180dp"
                android:text="Antoine Fuqua"
                android:fontFamily="@font/adamina"
                android:textSize="20dp"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/peli2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/peli1">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hipnosis"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="40dp"
                android:text="HIPNOSIS          ARMA INVISIBLE"
                android:fontFamily="@font/adamina"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="110dp"
                android:text="2023"
                android:textColor="@color/black"
                android:fontFamily="@font/adamina"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="145dp"
                android:text="92 min"
                android:fontFamily="@font/adamina"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="180dp"
                android:text="Robert Rodriguez"
                android:fontFamily="@font/adamina"
                android:textSize="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/peli3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/peli2">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/trols"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="40dp"
                android:text="TROLLS 3: SE ARMO LA BANDA"
                android:fontFamily="@font/adamina"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="110dp"
                android:text="2023"
                android:textColor="@color/black"
                android:fontFamily="@font/adamina"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="145dp"
